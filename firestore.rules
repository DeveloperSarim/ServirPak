rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Cities collection - allow read access to everyone
    match /cities/{cityId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      // Allow read access for authenticated users to get user data
      allow read: if request.auth != null;
    }
    
    // Lawyers collection
    match /lawyers/{lawyerId} {
      allow read, write: if request.auth != null && request.auth.uid == lawyerId;
      allow create: if request.auth != null;
      // Allow read access for authenticated users to browse lawyers
      allow read: if request.auth != null;
    }
    
    // KYC documents
    match /kyc_documents/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Consultations
    match /consultations/{consultationId} {
      allow read, write: if request.auth != null;
    }
    
    // Chat messages
    match /chat_messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Payments
    match /payments/{paymentId} {
      allow read, write: if request.auth != null;
    }
    
    // Default rule for all other documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}